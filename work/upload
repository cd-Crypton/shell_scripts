#!/bin/bash

set -e -x

# Note: This uses my very own TG_TOKEN and TG_CHAT_ID in codespace/workspace secret

cd work/AnyKernel3

curl --upload-file *AnyKernel3*.zip https://transfer.sh/ > transfer.txt
TRANSFER_LINK=$(cat transfer.txt)

echo -e \
"
âš™ï¸ Custom Kernel - Test Build by Crypton
âœ… Build Completed Successfully!
ğŸ”ƒ Download Link (transfer): <a href=\"$TRANSFER_LINK\">Download Here!</a>
ğŸš« This Build is for Testing Purposes Only. Please test at your own risk.
